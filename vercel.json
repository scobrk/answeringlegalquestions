{
  "version": 2,
  "rewrites": [
    { "source": "/api/query", "destination": "/api/query" },
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/query.py": {
      "runtime": "python3.9",
      "memory": 2048,
      "maxDuration": 60,
      "includeFiles": "agents/**,data/**"
    },
    "api/health.py": {
      "runtime": "python3.9",
      "memory": 128,
      "maxDuration": 10
    }
  }
}