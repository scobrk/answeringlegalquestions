{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "agents/**",
      "use": "@vercel/static"
    },
    {
      "src": "data/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/query", "destination": "/api/query" },
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/query.py": {
      "memory": 3008,
      "maxDuration": 60,
      "includeFiles": "agents/**,data/**"
    },
    "api/health.py": {
      "memory": 128,
      "maxDuration": 10
    }
  },
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": "echo 'Build complete'"
}